@using RestaurantOnlineBookingApp.Web.ViewModels.User
@model MakeAdminViewModel

<h2>Make User Admin</h2>

<form asp-controller="User" asp-action="MakeAdmin" method="post">
    <div class="form-group">
        <label asp-for="UserEmail">User Email:</label>
        <input asp-for="UserEmail" class="form-control" required /> 
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Make Admin</button>
</form>